@model SCore.Models.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

        <div class="row justify-content-center align-items-center" style="height:50vh">
            <div class="col-4">
                <h4>Sign in:</h4>
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-controller="Account" asp-action="LogIn" autocomplete="off">
                            <div>
                                <label asp-for="Email"></label><br />
                                <input asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div>
                                <label asp-for="Password"></label><br />
                                <input asp-for="Password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div style="margin-top:25px">
                                <input type="submit" value="Sign in" />
                            </div>
                        </form>
                    </div>
                </div>
                <div style="margin-top:25px">
                    <h4>Sign in with other providers:</h4>
                    <form>
                        <button asp-action="SignInWithGoogle" asp-controller="Account">Google</button>
                        <button asp-action="SignInWithFacebook" asp-controller="Account">Facebook</button>
                    </form>
                </div>
            </div>
        </div>




