@model IEnumerable<SCore.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h4>Orders of user @User.Identity.Name</h4>
<hr />
<p>
    <a class="btn btn-outline-primary" asp-action="Create" asp-controller="Orders">
        Create
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfOrder)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.User.UserName == User.Identity.Name)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfOrder)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Orders" asp-route-id="@item.OrderId">
                        Edit
                    </a>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-controller="Orders" asp-route-id="@item.OrderId">
                        Details
                    </a>
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-controller="Orders" asp-route-id="@item.OrderId">
                        Delete
                    </a>

                </td>
            </tr>
        }

    }

</table>

