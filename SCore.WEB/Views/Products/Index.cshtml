@model IEnumerable<SCore.Models.Product>
@using SCore.BLL.Infrastructure
@using SCore.WEB.ViewModels

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-default" asp-action="Create" asp-controller="Products">
            Create
        </a>
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-default" asp-action="Edit" asp-controller="Products" asp-route-id="@item.ProductId">
                        Edit
                    </a>
                    <a class="btn btn-default" asp-action="Delete" asp-controller="Products" asp-route-id="@item.ProductId">
                        Delete
                    </a>               
                }
            <a class="btn btn-default" asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductId">
                Details
            </a>
                <a class="btn btn-default" asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@item.ProductId">
                    Add to cart
                </a>
            </td>
        </tr>
    }
</table>
