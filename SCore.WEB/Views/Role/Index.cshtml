@model IEnumerable<SCore.Models.Entities.ApplicationRole>

@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a class="btn btn-default" asp-action="Edit" asp-controller="Role" asp-route-productId="@item.Id">
                    Edit
                </a>
                <a class="btn btn-default" asp-action="Delete" asp-controller="Role" asp-route-productId="@item.Id">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>